<%#  Home page with a picture, description and menu %>

<%- include("partials/header.ejs") %> 


<div class="container">
    <div class="container-grid">
        <h1>Web Dev Journals</h1>
        <p>A photographer learns web development and keeps it together</p>
    </div>

    <div class="latest-post">
        <div class="p-4 p-md-5 mb-4 rounded text-body-emphasis bg-body-secondary">
            <div class="col-lg-6 px-0">
                <% if (latestPost) { %>
                <h1 class="display-4 fst-italic"><%= latestPost.title %></h1>
                <p class="lead my-3">By <%= latestPost.author %> on <%= latestPost.date %> </p>
                <p class="lead my-3"><%= latestPost.content.substring(0, 100) %>...</p>
                <p class="lead mb-0">
                    <a href="/view-posts/<%= blogPosts.length - 1 %>" class="text-body-emphasis fw-bold">Continue reading...</a>
                </p>
                <% } else { %>
                <h1 class="display-4 fst-italic">No blog posts yet!</h1>
                <p class="lead my-3">Create a new post to get started.</p>
            <% } %>
            </div>
        </div>
    </div>
</div>
<%- include("partials/footer.ejs") %> 