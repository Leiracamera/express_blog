<%- include("partials/header.ejs") %>

<h1><%= post.title %></h1>
<p> By <%= post.author %> on <%= post.date %></p>
<p><%= post.content %></p>

<form action="/view-posts/<%= blogId %>/delete" method="POST">
    <button type="submit" class="btn btn-danger">Delete Post</button>
    <a href="/view-posts/<%= blogId %>/edit" class="edit-btn">Edit Post</a>
</form>